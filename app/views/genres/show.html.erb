<div class="mb-8">
  <h1 class="text-3xl font-bold"><%= @genre.name %> Movies & TV Shows</h1>
  <p class="text-gray-400">Browse content in the <%= @genre.name %> genre</p>
</div>

<!-- Movies Section -->
<% if @movies.any? %>
  <section class="mb-12">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-white">Movies</h2>
      <%= link_to "View All Movies", movies_path(genre_id: @genre.id), class: "text-red-500 hover:text-red-400" %>
    </div>
    
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6">
      <% @movies.each do |movie| %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg transform transition-transform hover:scale-105 group relative">
          <%= link_to movie_path(movie) do %>
            <div class="relative">
              <% if movie.display_poster_url %>
                <%= image_tag movie.display_poster_url, class: "w-full h-64 object-cover transition-transform group-hover:scale-110", alt: movie.title %>
              <% else %>
                <div class="bg-gray-700 w-full h-64 flex items-center justify-center">
                  <span class="text-gray-400">No Image</span>
                </div>
              <% end %>
              
              <!-- Play Button Overlay -->
              <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center transform scale-0 group-hover:scale-100 transition-transform">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </div>
            
            <div class="p-3">
              <h3 class="font-semibold truncate"><%= movie.title %></h3>
              <div class="flex justify-between text-sm text-gray-400 mt-1">
                <span><%= movie.release_year %></span>
                <span>⭐ <%= movie.imdb_rating || 'N/A' %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% if @movies.respond_to?(:current_page) %>
      <div class="mt-8 flex justify-center">
        <%= paginate @movies, param_name: 'movies_page' %>
      </div>
    <% end %>
  </section>
<% end %>

<!-- TV Shows Section -->
<% if @tv_shows.any? %>
  <section class="mb-12">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-white">TV Shows</h2>
      <%= link_to "View All TV Shows", tv_shows_path(genre_id: @genre.id), class: "text-red-500 hover:text-red-400" %>
    </div>
    
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6">
      <% @tv_shows.each do |tv_show| %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg transform transition-transform hover:scale-105 group relative">
          <%= link_to tv_show_path(tv_show) do %>
            <div class="relative">
              <% if tv_show.display_poster_url %>
                <%= image_tag tv_show.display_poster_url, class: "w-full h-64 object-cover transition-transform group-hover:scale-110", alt: tv_show.title %>
              <% else %>
                <div class="bg-gray-700 w-full h-64 flex items-center justify-center">
                  <span class="text-gray-400">No Image</span>
                </div>
              <% end %>
              
              <!-- Play Button Overlay -->
              <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center transform scale-0 group-hover:scale-100 transition-transform">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </div>
            
            <div class="p-3">
              <h3 class="font-semibold truncate"><%= tv_show.title %></h3>
              <div class="flex justify-between text-sm text-gray-400 mt-1">
                <span><%= tv_show.release_year %></span>
                <span>⭐ <%= tv_show.imdb_rating || 'N/A' %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% if @tv_shows.respond_to?(:current_page) %>
      <div class="mt-8 flex justify-center">
        <%= paginate @tv_shows, param_name: 'tv_shows_page' %>
      </div>
    <% end %>
  </section>
<% end %>

<!-- No Content Message -->
<% if @movies.empty? && @tv_shows.empty? %>
  <div class="text-center py-12">
    <h3 class="text-xl text-gray-400">No content found in <%= @genre.name %> genre</h3>
    <p class="text-gray-500 mt-2">Check back later for new additions</p>
    <%= link_to "← Back to Browse", root_path, class: "text-red-500 hover:text-red-400 mt-4 inline-block" %>
  </div>
<% end %>
