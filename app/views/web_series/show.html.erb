<!-- Hero Section -->
<div class="relative rounded-xl overflow-hidden mb-8">
  <% if @web_series.display_poster_url %>
    <div class="relative h-96 md:h-[500px]">
      <%= image_tag @web_series.display_poster_url, class: "w-full h-full object-cover", alt: @web_series.title %>
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-transparent"></div>
      
      <!-- Play Button Overlay -->
      <div class="absolute inset-0 flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity duration-300">
        <%= link_to web_series_path(@web_series, watch: true), class: "group flex items-center justify-center w-24 h-24 rounded-full bg-red-600/80 hover:bg-red-700/90 backdrop-blur-sm transition-all duration-300 transform hover:scale-110 hover:shadow-2xl" do %>
          <svg class="w-12 h-12 text-white group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
          </svg>
        <% end %>
      </div>
      
      <!-- Episode Info Overlay -->
      <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
        <div class="max-w-4xl mx-auto">
          <div class="flex items-center gap-3 mb-3">
            <span class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-medium">
              S<%= @web_series.season_number %> E<%= @web_series.episode_number %>
            </span>
            <% if @web_series.genre %>
              <span class="bg-gray-700 text-gray-300 px-3 py-1 rounded-full text-sm">
                <%= @web_series.genre.name %>
              </span>
            <% end %>
          </div>
          
          <h1 class="text-3xl md:text-5xl font-bold text-white mb-3 drop-shadow-lg"><%= @web_series.title %></h1>
          
          <div class="flex flex-wrap items-center gap-4 text-gray-300">
            <span><%= @web_series.release_date&.strftime("%B %d, %Y") || 'N/A' %></span>
            <span>â€¢</span>
            <span><%= @web_series.duration %> minutes</span>
            <span>â€¢</span>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <%= @web_series.views_count %> views
            </span>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-gray-800 h-96 md:h-[500px] flex items-center justify-center rounded-xl">
      <div class="text-center">
        <svg class="w-16 h-16 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-gray-400">No poster available</p>
      </div>
    </div>
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Main Content -->
  <div class="lg:col-span-2 space-y-8">
    <!-- Action Buttons -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <!-- Stream Button -->
        <%= link_to web_series_path(@web_series, watch: true), 
            class: "w-full bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white px-6 py-4 rounded-lg transition-all flex items-center justify-between group" do %>
          <div class="flex items-center gap-3">
            <span class="text-2xl group-hover:scale-110 transition-transform">ðŸŽ¬</span>
            <span>Stream Now</span>
          </div>
          <span class="text-sm opacity-80">HD</span>
        <% end %>
        
        <!-- Download Button (if enabled) -->
        <% if @web_series.enable_download %>
          <%= link_to download_web_series_path(@web_series), 
              class: "w-full bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white px-6 py-4 rounded-lg transition-all flex items-center justify-between" do %>
            <div class="flex items-center gap-3">
              <span class="text-xl">â¬‡</span>
              <span>Download Episode</span>
            </div>
            <div class="text-right">
              <div class="text-sm"><%= @web_series.download_quality&.upcase || "HD" %></div>
              <% if @web_series.download_price && @web_series.download_price > 0 %>
                <div class="text-xs opacity-80">$<%= @web_series.download_price %></div>
              <% else %>
                <div class="text-xs opacity-80">FREE</div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- Description -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h3 class="text-xl font-bold text-white mb-4">Episode Description</h3>
      <div class="prose prose-invert max-w-none">
        <p class="text-gray-300 leading-relaxed">
          <%= @web_series.description.presence || "No description available for this episode." %>
        </p>
      </div>
    </div>
    
    <!-- Related Episodes -->
    <% if @related_series.any? %>
      <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
        <h3 class="text-xl font-bold text-white mb-4">Related Episodes</h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
          <% @related_series.each do |series| %>
            <%= link_to web_series_path(series), class: "block group" do %>
              <div class="bg-gray-700 rounded-lg overflow-hidden">
                <% if series.display_poster_url %>
                  <%= image_tag series.display_poster_url, 
                      class: "w-full h-32 object-cover transition-transform group-hover:scale-105", 
                      alt: series.title,
                      onerror: "this.parentElement.innerHTML='<div class=\"w-full h-32 bg-gray-600 flex items-center justify-center\"><span class=\"text-gray-400 text-sm\">No Image</span></div>'" %>
                <% else %>
                  <div class="w-full h-32 bg-gray-600 flex items-center justify-center">
                    <span class="text-gray-400 text-sm">No Image</span>
                  </div>
                <% end %>
                <div class="p-3">
                  <div class="text-xs text-gray-400 mb-1">
                    S<%= series.season_number %> E<%= series.episode_number %>
                  </div>
                  <h4 class="text-sm font-medium text-white truncate"><%= series.title %></h4>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Episode Info -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h3 class="text-xl font-bold text-white mb-4">Episode Details</h3>
      
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-400">Season</span>
          <span class="text-white font-medium">Season <%= @web_series.season_number %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Episode</span>
          <span class="text-white font-medium">Episode <%= @web_series.episode_number %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Release Date</span>
          <span class="text-white font-medium"><%= @web_series.release_date&.strftime("%B %d, %Y") || 'N/A' %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Duration</span>
          <span class="text-white font-medium"><%= @web_series.duration %> minutes</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Views</span>
          <span class="text-white font-medium"><%= @web_series.views_count %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Downloads</span>
          <span class="text-white font-medium"><%= @web_series.downloads_count %></span>
        </div>
      </div>
    </div>
    
    <!-- Genre Info -->
    <% if @web_series.genre %>
      <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
        <h3 class="text-xl font-bold text-white mb-4">Category</h3>
        <%= link_to genre_path(@web_series.genre), 
            class: "inline-block bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors" do %>
          <%= @web_series.genre.name %>
        <% end %>
      </div>
    <% end %>
    
    <!-- Share Section -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h3 class="text-xl font-bold text-white mb-4">Share This Episode</h3>
      
      <div class="flex gap-3">
        <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg transition-colors">
          Facebook
        </button>
        <button class="flex-1 bg-sky-500 hover:bg-sky-600 text-white py-2 rounded-lg transition-colors">
          Twitter
        </button>
        <button class="flex-1 bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg transition-colors">
          WhatsApp
        </button>
      </div>
    </div>
  </div>
</div>