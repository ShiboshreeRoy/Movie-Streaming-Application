<!-- Page Title -->
<div class="mb-8">
  <h1 class="text-3xl font-bold">Search Results</h1>
  <p class="text-gray-400">Results for "<%= @search_term %>"</p>
</div>

<!-- Search Results Tabs -->
<div class="mb-8">
  <div class="border-b border-gray-700">
    <nav class="-mb-px flex space-x-8">
      <a href="#movies" class="text-white py-4 px-1 border-b-2 border-transparent hover:border-gray-300 hover:text-gray-300">
        Movies (<%= @movies&.count || 0 %>)
      </a>
      <a href="#tvshows" class="text-white py-4 px-1 border-b-2 border-transparent hover:border-gray-300 hover:text-gray-300">
        TV Shows (<%= @tv_shows&.count || 0 %>)
      </a>
    </nav>
  </div>
</div>

<!-- Movies Results -->
<% if @movies&.any? %>
  <section id="movies" class="mb-12">
    <h2 class="text-2xl font-bold mb-6 text-white">Movies</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6">
      <% @movies.each do |movie| %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg transform transition-transform hover:scale-105">
          <%= link_to movie_path(movie) do %>
            <% if movie.poster_url %>
              <%= image_tag movie.poster_url, class: "w-full h-64 object-cover", alt: movie.title %>
            <% else %>
              <div class="bg-gray-700 w-full h-64 flex items-center justify-center">
                <span class="text-gray-400">No Image</span>
              </div>
            <% end %>
            <div class="p-3">
              <h3 class="font-semibold truncate"><%= movie.title %></h3>
              <div class="flex justify-between text-sm text-gray-400 mt-1">
                <span><%= movie.release_year %></span>
                <span>⭐ <%= movie.imdb_rating || 'N/A' %></span>
              </div>
              <div class="mt-2 text-xs text-gray-500 truncate">
                <%= movie.genre&.name %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% if @movies.respond_to?(:current_page) %>
      <div class="mt-8 flex justify-center">
        <%= paginate @movies %>
      </div>
    <% end %>
  </section>
<% end %>

<!-- TV Shows Results -->
<% if @tv_shows&.any? %>
  <section id="tvshows" class="mb-12">
    <h2 class="text-2xl font-bold mb-6 text-white">TV Shows</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6">
      <% @tv_shows.each do |tv_show| %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg transform transition-transform hover:scale-105">
          <%= link_to tv_show_path(tv_show) do %>
            <% if tv_show.poster_url %>
              <%= image_tag tv_show.poster_url, class: "w-full h-64 object-cover", alt: tv_show.title %>
            <% else %>
              <div class="bg-gray-700 w-full h-64 flex items-center justify-center">
                <span class="text-gray-400">No Image</span>
              </div>
            <% end %>
            <div class="p-3">
              <h3 class="font-semibold truncate"><%= tv_show.title %></h3>
              <div class="flex justify-between text-sm text-gray-400 mt-1">
                <span><%= tv_show.release_year %></span>
                <span>⭐ <%= tv_show.imdb_rating || 'N/A' %></span>
              </div>
              <div class="mt-2 text-xs text-gray-500 truncate">
                <%= tv_show.genre&.name %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% if @tv_shows.respond_to?(:current_page) %>
      <div class="mt-8 flex justify-center">
        <%= paginate @tv_shows %>
      </div>
    <% end %>
  </section>
<% end %>

<!-- No Results Message -->
<% if !@movies&.any? && !@tv_shows&.any? %>
  <div class="text-center py-12">
    <h3 class="text-xl text-gray-400">No results found for "<%= @search_term %>"</h3>
    <p class="text-gray-500 mt-2">Try searching for something else</p>
  </div>
<% end %>