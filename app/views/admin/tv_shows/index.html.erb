<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-white">TV Shows Management</h1>
    <%= link_to "Add New TV Show", new_admin_tv_show_path,
        class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md" %>
  </div>

  <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-700">
        <thead class="bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Year</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Seasons</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Rating</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Thumbnail</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-gray-800 divide-y divide-gray-700">
          <% @tv_shows.each do |tv_show| %>
            <tr class="hover:bg-gray-750">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-white"><%= tv_show.title %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-300"><%= tv_show.release_year %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-300"><%= tv_show.seasons %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-300"><%= tv_show.imdb_rating || 'N/A' %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if tv_show.thumbnail.attached? %>
                  <span class="px-2 py-1 text-xs bg-green-600 text-white rounded-full">Uploaded</span>
                <% else %>
                  <span class="px-2 py-1 text-xs bg-yellow-600 text-white rounded-full">Missing</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View", admin_tv_show_path(tv_show),
                    class: "text-blue-400 hover:text-blue-300 mr-3" %>
                <%= link_to "Edit", edit_admin_tv_show_path(tv_show),
                    class: "text-yellow-400 hover:text-yellow-300 mr-3" %>
                <%= link_to "Delete", admin_tv_show_path(tv_show),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "text-red-400 hover:text-red-300" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <% if @tv_shows.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-400">No TV shows found.</p>
        <%= link_to "Add your first TV show", new_admin_tv_show_path,
            class: "mt-4 inline-block bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md" %>
      </div>
    <% end %>
  </div>

  <% if @tv_shows.respond_to?(:current_page) %>
    <div class="mt-8 flex justify-center">
      <%= paginate @tv_shows %>
    </div>
  <% end %>
</div>