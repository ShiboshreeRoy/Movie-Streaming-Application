<div class="bg-gray-800 rounded-lg p-6 max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-white mb-6">Edit Category</h1>
  
  <%= form_with model: [:admin, @genre], local: true, class: "space-y-6" do |form| %>
    <% if @genre.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h3 class="font-bold"><%= pluralize(@genre.errors.count, "error") %> prohibited this genre from being saved:</h3>
        <ul class="list-disc pl-5 mt-2">
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.text_field :name, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
    </div>
    
    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
    </div>
    
    <div class="flex justify-end space-x-4 pt-4">
      <%= link_to "Cancel", admin_genres_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded transition-colors" %>
      <%= form.submit "Update Category", class: "bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded transition-colors" %>
    </div>
  <% end %>
</div>