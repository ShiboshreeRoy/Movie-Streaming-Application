<div class="bg-gray-800 rounded-lg p-6 max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-white">Manage Categories</h1>
    <%= link_to "New Category", new_admin_genre_path, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors" %>
  </div>
  
  <div class="overflow-x-auto">
    <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
      <thead class="bg-gray-600">
        <tr>
          <th class="py-3 px-4 text-left text-white font-semibold">Name</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Description</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Slug</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr class="border-b border-gray-600 hover:bg-gray-650">
            <td class="py-3 px-4 text-white"><%= genre.name %></td>
            <td class="py-3 px-4 text-gray-300"><%= genre.description&.truncate(50) || 'N/A' %></td>
            <td class="py-3 px-4 text-gray-300"><%= genre.slug %></td>
            <td class="py-3 px-4">
              <%= link_to "Edit", edit_admin_genre_path(genre), class: "text-blue-400 hover:text-blue-300 mr-3" %>
              <%= link_to "Delete", admin_genre_path(genre), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                  class: "text-red-400 hover:text-red-300" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @genres.respond_to?(:current_page) %>
    <div class="mt-6 flex justify-center">
      <%= paginate @genres %>
    </div>
  <% end %>
  
  <% if @genres.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-400">No categories found. <%= link_to "Create your first category", new_admin_genre_path, class: "text-red-400 hover:text-red-300" %>.</p>
    </div>
  <% end %>
</div>