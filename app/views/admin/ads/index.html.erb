<div class="bg-gray-800 rounded-lg p-6 max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-white">Manage Site-Wide Ads</h1>
    <%= link_to "New Ad", new_admin_ad_path, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors" %>
  </div>
  
  <div class="overflow-x-auto">
    <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
      <thead class="bg-gray-600">
        <tr>
          <th class="py-3 px-4 text-left text-white font-semibold">Title</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Placement Zone</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Status</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Priority</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @ads.each do |ad| %>
          <tr class="border-b border-gray-600 hover:bg-gray-650">
            <td class="py-3 px-4 text-white"><%= ad.title %></td>
            <td class="py-3 px-4 text-gray-300"><%= ad.placement_zone_name&.humanize || 'N/A' %></td>
            <td class="py-3 px-4">
              <% if ad.active? %>
                <span class="bg-green-600 text-white px-2 py-1 rounded text-xs">Active</span>
              <% else %>
                <span class="bg-gray-600 text-white px-2 py-1 rounded text-xs">Inactive</span>
              <% end %>
            </td>
            <td class="py-3 px-4 text-gray-300"><%= ad.priority || 0 %></td>
            <td class="py-3 px-4">
              <%= link_to "Edit", edit_admin_ad_path(ad), class: "text-blue-400 hover:text-blue-300 mr-3" %>
              <%= link_to "Delete", admin_ad_path(ad), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                  class: "text-red-400 hover:text-red-300" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @ads.respond_to?(:current_page) %>
    <div class="mt-6 flex justify-center">
      <%= paginate @ads %>
    </div>
  <% end %>
  
  <% if @ads.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-400">No ads found. <%= link_to "Create your first ad", new_admin_ad_path, class: "text-red-400 hover:text-red-300" %>.</p>
    </div>
  <% end %>
</div>