<div class="bg-gray-800 rounded-lg p-6 max-w-6xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Edit Movie</h1>
  
  <%= form_with model: [:admin, @movie], local: true, multipart: true, class: "space-y-6", id: "movie-form" do |form| %>
    <% if @movie.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h3 class="font-bold"><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h3>
        <ul class="list-disc pl-5 mt-2">
          <% @movie.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <!-- Basic Information Section -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4 text-white">Basic Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div>
          <%= form.label :title, class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.text_field :title, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500", required: true %>
        </div>
        
        <div>
          <%= form.label :genre_id, "Genre", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.select :genre_id, options_from_collection_for_select(@genres, "id", "name", @movie.genre_id), { include_blank: "Select Genre" }, { class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" } %>
        </div>
        
        <div>
          <%= form.label :release_year, "Release Year", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.number_field :release_year, min: 1900, max: Date.current.year + 5, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :duration, "Duration (minutes)", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.number_field :duration, min: 1, max: 300, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :imdb_rating, "IMDb Rating", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.number_field :imdb_rating, step: 0.1, min: 0, max: 10, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :country, class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.text_field :country, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
      </div>
    </div>
    
    <!-- Cast & Crew Section -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4 text-white">Cast & Crew</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :director, class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.text_field :director, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :cast, class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.text_area :cast, rows: 3, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500", placeholder: "Actor 1, Actor 2, Actor 3..." %>
        </div>
      </div>
    </div>
    
    <!-- Description Section -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4 text-white">Description</h2>
      <div>
        <%= form.label :description, class: "block text-sm font-medium mb-2 text-gray-300" %>
        <%= form.text_area :description, rows: 4, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500", placeholder: "Enter movie description..." %>
      </div>
    </div>
    
    <!-- Media Files Section -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4 text-white">Media Files</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :thumbnail, "Movie Thumbnail", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <% if @movie.thumbnail.attached? %>
            <div class="mb-2">
              <%= image_tag @movie.display_poster_url, class: "w-32 h-48 object-cover rounded" %>
              <p class="text-sm text-green-400 mt-1">Current thumbnail uploaded</p>
            </div>
          <% end %>
          <%= form.file_field :thumbnail, accept: 'image/*', class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
          <p class="text-sm text-gray-400 mt-1">Upload a new poster image (PNG, JPG, JPEG - Max 5MB)</p>
          <% if @movie.thumbnail.attached? %>
            <p class="text-sm text-yellow-400 mt-1">Leave blank to keep current thumbnail</p>
          <% end %>
          <div id="thumbnail-preview" class="mt-2 hidden">
            <img id="thumbnail-img" src="" alt="Thumbnail Preview" class="max-w-xs max-h-48 rounded">
          </div>
        </div>
        
        <div>
          <%= form.label :video, "Movie Video", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <% if @movie.video.attached? %>
            <div class="mb-2">
              <p class="text-sm text-green-400">Current video uploaded (<%= number_to_human_size(@movie.video.blob.byte_size) %>)</p>
              <% if @movie.display_video_url %>
                <div class="mt-2">
                  <video controls class="w-full max-w-xs" preload="metadata">
                    <source src="<%= @movie.display_video_url %>" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
                </div>
              <% end %>
            </div>
          <% end %>
          <%= form.file_field :video, accept: 'video/*', class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
          <p class="text-sm text-gray-400 mt-1">Upload a new movie file (MP4, AVI, MOV - Max 100MB)</p>
          <% if @movie.video.attached? %>
            <p class="text-sm text-yellow-400 mt-1">Leave blank to keep current video</p>
          <% end %>
          <div id="video-size-info" class="text-sm text-gray-400 mt-1 hidden">
            File size: <span id="video-size"></span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Alternative URLs Section -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4 text-white">Alternative URLs</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :poster_url, "Poster URL (fallback)", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.url_field :poster_url, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500", placeholder: "https://example.com/poster.jpg" %>
          <p class="text-sm text-gray-400 mt-1">External URL for poster image (used if no thumbnail uploaded)</p>
        </div>
        
        <div>
          <%= form.label :trailer_url, "Trailer URL (fallback)", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.url_field :trailer_url, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500", placeholder: "https://youtube.com/watch?v=..." %>
          <p class="text-sm text-gray-400 mt-1">External URL for trailer/video (used if no video uploaded)</p>
        </div>
      </div>
    </div>
    
    <!-- Advanced Features Section -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4 text-white">Advanced Features</h2>
      
      <!-- Advertising Section -->
      <div class="border-b border-gray-600 pb-6 mb-6">
        <h3 class="text-lg font-medium text-white mb-4">Advertising Options</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <%= form.label :enable_ads, "Enable Pre-roll Ads", class: "block text-sm font-medium mb-2 text-gray-300" %>
            <div class="flex items-center">
              <%= form.check_box :enable_ads, class: "mr-2 h-5 w-5 text-red-600 rounded focus:ring-red-500", id: "enable-ads-checkbox" %>
              <span class="text-gray-300">Show ads before movie playback</span>
            </div>
          </div>
          
          <div>
            <%= form.label :ad_frequency, "Ad Frequency (seconds)", class: "block text-sm font-medium mb-2 text-gray-300" %>
            <%= form.number_field :ad_frequency, min: 30, max: 300, step: 30, value: 60, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
            <p class="text-sm text-gray-400 mt-1">How often mid-roll ads appear</p>
          </div>
        </div>

        <div id="ads-container" class="space-y-4">
          <div class="flex justify-between items-center">
            <h4 class="text-md font-medium text-white">Ad Campaigns</h4>
            <button type="button" id="add-ad-btn" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm">
              + Add Ad
            </button>
          </div>
          
          <!-- Existing ads -->
          <% @movie.ads.each_with_index do |ad, index| %>
            <div class="bg-gray-600 p-4 rounded-lg">
              <div class="flex justify-between items-start mb-3">
                <h5 class="text-md font-medium text-white">Ad Campaign #<%= index + 1 %></h5>
                <div class="flex space-x-2">
                  <button type="button" class="remove-ad-btn text-red-400 hover:text-red-300">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414z" clip-rule="evenodd"></path>
                    </svg>
                  </button>
                  <button type="button" class="mark-for-destruction-btn text-gray-400 hover:text-gray-300" title="Mark for deletion">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </button>
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= form.fields_for :ads, ad do |ad_form| %>
                    <%= ad_form.hidden_field :id %>
                    <%= ad_form.hidden_field :_destroy %>
                    <%= ad_form.label :title, "Ad Title", class: "block text-sm font-medium mb-1 text-gray-300" %>
                    <%= ad_form.text_field :title, placeholder: "Ad campaign name", class: "w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400 required-if-enabled", data: { required_message: "Ad title is required" } %>
                  <% end %>
                </div>
                
                <div>
                  <%= form.fields_for :ads, ad do |ad_form| %>
                    <%= ad_form.label :url, "Ad URL", class: "block text-sm font-medium mb-1 text-gray-300" %>
                    <%= ad_form.url_field :url, placeholder: "https://example.com/ad", class: "w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400 required-if-enabled", data: { required_message: "Ad URL is required" } %>
                  <% end %>
                </div>
                
                <div>
                  <%= form.fields_for :ads, ad do |ad_form| %>
                    <%= ad_form.label :duration, "Duration (seconds)", class: "block text-sm font-medium mb-1 text-gray-300" %>
                    <%= ad_form.number_field :duration, min: 5, max: 120, value: ad.duration || 30, class: "w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400" %>
                  <% end %>
                </div>
                
                <div>
                  <%= form.fields_for :ads, ad do |ad_form| %>
                    <%= ad_form.label :position, "Position", class: "block text-sm font-medium mb-1 text-gray-300" %>
                    <%= ad_form.select :position, options_for_select([['Pre-roll', 'pre'], ['Mid-roll', 'mid'], ['Post-roll', 'post']], ad.position), {}, { class: "w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400" } %>
                  <% end %>
                </div>
              </div>
              
              <div class="mt-3">
                <%= form.fields_for :ads, ad do |ad_form| %>
                  <%= ad_form.label :script, "Ad Script/Code", class: "block text-sm font-medium mb-1 text-gray-300" %>
                  <%= ad_form.text_area :script, rows: 3, placeholder: "Paste your ad script or tracking code here", class: "w-full bg-gray-500 text-white rounded px-3 py-2 font-mono text-sm border border-gray-400" %>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <!-- Ad Template (hidden) -->
          <div id="ad-template" class="hidden bg-gray-600 p-4 rounded-lg">
            <div class="flex justify-between items-start mb-3">
              <h5 class="text-md font-medium text-white">Ad Campaign #<span class="ad-number">1</span></h5>
              <button type="button" class="remove-ad-btn text-red-400 hover:text-red-300">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </button>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.fields_for :ads, @movie.ads.build do |ad_form| %>
                  <%= ad_form.label :title, "Ad Title", class: "block text-sm font-medium mb-1 text-gray-300" %>
                  <input type="text" name="movie[ads_attributes][NEW_AD_INDEX][title]" placeholder="Ad campaign name" class="w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400 required-if-enabled" data-required-message="Ad title is required">
                <% end %>
              </div>
              
              <div>
                <%= form.fields_for :ads, @movie.ads.build do |ad_form| %>
                  <%= ad_form.label :url, "Ad URL", class: "block text-sm font-medium mb-1 text-gray-300" %>
                  <input type="url" name="movie[ads_attributes][NEW_AD_INDEX][url]" placeholder="https://example.com/ad" class="w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400 required-if-enabled" data-required-message="Ad URL is required">
                <% end %>
              </div>
              
              <div>
                <%= form.fields_for :ads, @movie.ads.build do |ad_form| %>
                  <%= ad_form.label :duration, "Duration (seconds)", class: "block text-sm font-medium mb-1 text-gray-300" %>
                  <input type="number" name="movie[ads_attributes][NEW_AD_INDEX][duration]" min="5" max="120" value="30" class="w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400">
                <% end %>
              </div>
              
              <div>
                <%= form.fields_for :ads, @movie.ads.build do |ad_form| %>
                  <%= ad_form.label :position, "Position", class: "block text-sm font-medium mb-1 text-gray-300" %>
                  <select name="movie[ads_attributes][NEW_AD_INDEX][position]" class="w-full bg-gray-500 text-white rounded px-3 py-2 border border-gray-400">
                    <option value="pre">Pre-roll</option>
                    <option value="mid">Mid-roll</option>
                    <option value="post">Post-roll</option>
                  </select>
                <% end %>
              </div>
            </div>
            
            <div class="mt-3">
              <%= form.fields_for :ads, @movie.ads.build do |ad_form| %>
                <%= ad_form.label :script, "Ad Script/Code", class: "block text-sm font-medium mb-1 text-gray-300" %>
                <textarea name="movie[ads_attributes][NEW_AD_INDEX][script]" rows="3" placeholder="Paste your ad script or tracking code here" class="w-full bg-gray-500 text-white rounded px-3 py-2 font-mono text-sm border border-gray-400"></textarea>
              <% end %>
            </div>
          </div>
        </div>
        
        <div id="ads-validation-error" class="mt-2 text-red-400 text-sm hidden">
          Please enter all required ad information if ads are enabled.
        </div>
      </div>

      <!-- Download Options -->
      <div>
        <h3 class="text-lg font-medium text-white mb-4">Download Options</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :enable_download, "Enable Download", class: "block text-sm font-medium mb-2 text-gray-300" %>
            <div class="flex items-center">
              <%= form.check_box :enable_download, class: "mr-2 h-5 w-5 text-red-600 rounded focus:ring-red-500" %>
              <span class="text-gray-300">Allow users to download this movie</span>
            </div>
          </div>
          
          <div>
            <%= form.label :download_quality, "Download Quality", class: "block text-sm font-medium mb-2 text-gray-300" %>
            <%= form.select :download_quality, options_for_select([['HD (1080p)', 'hd'], ['SD (720p)', 'sd'], ['Mobile (480p)', 'mobile'], ['Ultra HD (4K)', '4k']], @movie.download_quality), {}, { class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" } %>
          </div>
        </div>
        
        <div class="mt-4">
          <%= form.label :download_price, "Download Price ($)", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.number_field :download_price, step: 0.99, min: 0, value: @movie.download_price || 0, class: "w-full md:w-1/3 bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
          <p class="text-sm text-gray-400 mt-1">Set to 0 for free downloads</p>
        </div>
      </div>
    </div>
    
    <!-- Form Actions -->
    <div class="flex justify-end space-x-4 pt-6">
      <%= link_to "Cancel", admin_movies_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded transition-colors" %>
      <%= form.submit "Update Movie", class: "bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded transition-colors", id: "submit-btn" %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Thumbnail preview
  const thumbnailInput = document.querySelector('input[type="file"][name="movie[thumbnail]"]');
  const thumbnailPreview = document.getElementById('thumbnail-preview');
  const thumbnailImg = document.getElementById('thumbnail-img');
  
  if (thumbnailInput) {
    thumbnailInput.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          thumbnailImg.src = e.target.result;
          thumbnailPreview.classList.remove('hidden');
        };
        reader.readAsDataURL(file);
      }
    });
  }
  
  // Video size info
  const videoInput = document.querySelector('input[type="file"][name="movie[video]"]');
  
  if (videoInput) {
    videoInput.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const sizeInMB = (file.size / (1024 * 1024)).toFixed(2);
        document.getElementById('video-size').textContent = `${sizeInMB} MB`;
        document.getElementById('video-size-info').classList.remove('hidden');
      }
    });
  }
  
  // Form submission with validation
  const form = document.getElementById('movie-form');
  const submitBtn = document.getElementById('submit-btn');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      // Remove any unprocessed template ads (those with NEW_AD_INDEX)
      const unprocessedTemplates = form.querySelectorAll('input[name*="NEW_AD_INDEX"]');
      unprocessedTemplates.forEach(function(templateField) {
        const container = templateField.closest('.bg-gray-600.p-4.rounded-lg');
        if (container && container.style.display !== 'none') {
          container.remove();
        }
      });
      
      // Validate required ad fields if ads are enabled
      const enableAds = document.getElementById('enable-ads-checkbox');
      const adsContainer = document.getElementById('ads-container');
      const adsValidationError = document.getElementById('ads-validation-error');
      
      if (enableAds && enableAds.checked) {
        const requiredFields = adsContainer.querySelectorAll('.required-if-enabled');
        let isValid = true;
        
        requiredFields.forEach(field => {
          if (!field.value.trim()) {
            isValid = false;
            // Highlight invalid field
            field.style.borderColor = '#ef4444';
            field.style.backgroundColor = '#fee2e2';
          } else {
            field.style.borderColor = '#6b7280';
            field.style.backgroundColor = '#4b5563';
          }
        });
        
        if (!isValid) {
          e.preventDefault();
          adsValidationError.classList.remove('hidden');
          showToast('Please fill in all required ad information', 'error');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Update Movie';
          return false;
        }
        
        // Check if there are any ads added
        const adCampaigns = adsContainer.querySelectorAll('[id!="ad-template"]:not(.hidden)');
        if (adCampaigns.length === 0) {
          e.preventDefault();
          adsValidationError.classList.remove('hidden');
          showToast('Please add at least one ad campaign when ads are enabled', 'error');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Update Movie';
          return false;
        }
      }
      
      // Clear validation errors
      const allInvalidFields = adsContainer.querySelectorAll('.required-if-enabled');
      allInvalidFields.forEach(field => {
        field.style.borderColor = '#6b7280';
        field.style.backgroundColor = '#4b5563';
      });
      adsValidationError.classList.add('hidden');
      
      submitBtn.disabled = true;
      submitBtn.textContent = 'Updating...';
      
      // Show loading toast
      showToast('Updating movie...', 'success');
    });
  }
  
  // Advanced ad management
  const adsContainer = document.getElementById('ads-container');
  const addAdBtn = document.getElementById('add-ad-btn');
  const adTemplate = document.getElementById('ad-template');
  let adCount = document.querySelectorAll('#ads-container > div:not(#ad-template):not(.hidden)').length; // Count existing ads

  // Add new ad
  addAdBtn.addEventListener('click', function() {
    adCount++;
    const newAd = adTemplate.cloneNode(true);
    newAd.classList.remove('hidden');
    newAd.id = '';
    
    // Update ad number
    const adNumber = newAd.querySelector('.ad-number');
    adNumber.textContent = adCount;
    
    // Update input names with unique indices
    const inputs = newAd.querySelectorAll('input, select, textarea');
    inputs.forEach(input => {
      const name = input.getAttribute('name');
      if (name) {
        // Replace NEW_AD_INDEX with actual count
        input.setAttribute('name', name.replace('NEW_AD_INDEX', adCount.toString()));
      }
    });
    
    // Add remove functionality
    const removeBtn = newAd.querySelector('.remove-ad-btn');
    removeBtn.addEventListener('click', function() {
      newAd.remove();
      updateAdNumbers();
      showToast('Ad removed successfully', 'success');
    });
    
    // Insert before the template
    adsContainer.insertBefore(newAd, adTemplate);
    showToast(`Ad #${adCount} added successfully`, 'success');
  });

  // Update ad numbers after removal
  function updateAdNumbers() {
    const ads = adsContainer.querySelectorAll('[id!="ad-template"]:not(.hidden)');
    ads.forEach((ad, index) => {
      const numberSpan = ad.querySelector('.ad-number');
      if (numberSpan) {
        numberSpan.textContent = index + 1;
      }
    });
    adCount = ads.length;
  }

  // Handle existing ad removal
  document.querySelectorAll('.remove-ad-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const adElement = this.closest('[id!="ad-template"]');
      adElement.remove();
      updateAdNumbers();
      showToast('Ad removed successfully', 'success');
    });
  });

  // Mark for destruction functionality for existing ads
  document.querySelectorAll('.mark-for-destruction-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const adElement = this.closest('[id!="ad-template"]');
      const destroyField = adElement.querySelector('input[type="hidden"][name$="[_destroy]"]');
      if (destroyField) {
        destroyField.value = '1';
        adElement.style.opacity = '0.5';
        adElement.style.textDecoration = 'line-through';
        showToast('Ad marked for deletion', 'warning');
      }
    });
  });

  // Auto-ads feature
  const enableAdsCheckbox = document.getElementById('enable-ads-checkbox');
  
  if (enableAdsCheckbox) {
    enableAdsCheckbox.addEventListener('change', function() {
      if (this.checked) {
        showToast('Advertising enabled. Add ad campaigns below.', 'success');
      } else {
        showToast('Advertising disabled.', 'warning');
      }
    });
  }
  
  // Custom toast function
  function showToast(message, type = 'success') {
    // Dispatch custom event for the main layout to handle
    document.dispatchEvent(new CustomEvent('toast:show', {
      detail: { message: message, type: type }
    }));
  }
  
  // Auto-save draft functionality
  const titleInput = document.querySelector('input[name="movie[title]"]');
  let saveDraftTimer;
  
  if (titleInput) {
    titleInput.addEventListener('input', function() {
      clearTimeout(saveDraftTimer);
      saveDraftTimer = setTimeout(() => {
        // In a real app, you'd send an AJAX request here
        console.log('Draft saved automatically');
      }, 2000);
    });
  }
});

// Global function to show toast (can be called from anywhere)
function showToast(message, type = 'success') {
  document.dispatchEvent(new CustomEvent('toast:show', {
    detail: { message: message, type: type }
  }));
}
