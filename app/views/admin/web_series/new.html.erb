<div class="bg-gray-800 rounded-lg p-6 max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Add New Web Series Episode</h1>
  
  <%= form_with model: [:admin, @web_series], local: true, multipart: true, class: "space-y-6" do |form| %>
    <% if @web_series.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h3 class="font-bold"><%= pluralize(@web_series.errors.count, "error") %> prohibited this web series from being saved:</h3>
        <ul class="list-disc pl-5 mt-2">
          <% @web_series.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Basic Information -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold text-white mb-4">Basic Information</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :title, class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.text_field :title, required: true, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :genre_id, "Genre", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.select :genre_id, options_from_collection_for_select(@genres, "id", "name"), { include_blank: "Select Genre" }, { class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" } %>
        </div>
        
        <div>
          <%= form.label :season_number, "Season Number", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.number_field :season_number, min: 1, value: 1, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :episode_number, "Episode Number", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.number_field :episode_number, min: 1, value: 1, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :release_date, "Release Date", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.date_field :release_date, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :duration, "Duration (minutes)", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.number_field :duration, min: 1, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
      </div>
      
      <div class="mt-4">
        <%= form.label :description, class: "block text-sm font-medium mb-2 text-gray-300" %>
        <%= form.text_area :description, rows: 4, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
      </div>
    </div>

    <!-- Media Files -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold text-white mb-4">Media Files</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :thumbnail, "Thumbnail Image", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.file_field :thumbnail, accept: 'image/png,image/jpg,image/jpeg', class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
          <p class="text-xs text-gray-400 mt-1">PNG, JPG, or JPEG (Max 5MB)</p>
        </div>
        
        <div>
          <%= form.label :video, "Video File", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.file_field :video, accept: 'video/mp4,video/avi,video/mov', class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
          <p class="text-xs text-gray-400 mt-1">MP4, AVI, or MOV (Max 500MB)</p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
        <div>
          <%= form.label :poster_url, "Poster URL (Alternative)", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.url_field :poster_url, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
        
        <div>
          <%= form.label :trailer_url, "Trailer URL (Alternative)", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.url_field :trailer_url, class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        </div>
      </div>
    </div>

    <!-- Download Options -->
    <div class="bg-gray-700 rounded-lg p-6">
      <h2 class="text-xl font-semibold text-white mb-4">Download Options</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :enable_download, "Enable Download", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <div class="flex items-center">
            <%= form.check_box :enable_download, class: "mr-2 h-5 w-5 text-red-600 rounded focus:ring-red-500" %>
            <span class="text-gray-300">Allow users to download this episode</span>
          </div>
        </div>
        
        <div>
          <%= form.label :download_quality, "Download Quality", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= form.select :download_quality, options_for_select([['HD (1080p)', 'hd'], ['SD (720p)', 'sd'], ['Mobile (480p)', 'mobile'], ['Ultra HD (4K)', '4k']], @web_series.download_quality), {}, { class: "w-full bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" } %>
        </div>
      </div>
      
      <div class="mt-4">
        <%= form.label :download_price, "Download Price ($)", class: "block text-sm font-medium mb-2 text-gray-300" %>
        <%= form.number_field :download_price, step: 0.99, min: 0, value: @web_series.download_price || 0, class: "w-full md:w-1/3 bg-gray-600 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 border border-gray-500" %>
        <p class="text-xs text-gray-400 mt-1">Set to 0 for free downloads</p>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-end space-x-4 pt-6 border-t border-gray-600">
      <%= link_to "Cancel", admin_web_series_index_path, class: "px-6 py-3 border border-gray-600 text-gray-300 rounded-lg hover:bg-gray-700 transition-colors" %>
      <%= form.submit "Create Web Series Episode", class: "px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors cursor-pointer" %>
    </div>
  <% end %>
</div>