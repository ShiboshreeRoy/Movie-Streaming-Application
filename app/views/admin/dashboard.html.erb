<div class="bg-gray-800 min-h-screen">
  <div class="p-6 max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-white mb-2">Admin Dashboard</h1>
      <p class="text-gray-400">Manage your streaming platform efficiently</p>
    </div>
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-blue-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h18M3 20h18"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">Movies</h3>
            <p class="text-2xl font-bold text-white"><%= Movie.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-green-600 to-green-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-green-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">TV Shows</h3>
            <p class="text-2xl font-bold text-white"><%= TvShow.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-purple-600 to-purple-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-purple-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">Web Series</h3>
            <p class="text-2xl font-bold text-white"><%= WebSeries.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-purple-600 to-purple-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-purple-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">Total Views</h3>
            <p class="text-2xl font-bold text-white"><%= Movie.sum(:views_count) %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-green-600 to-green-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-green-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">Total Downloads</h3>
            <p class="text-2xl font-bold text-white"><%= Movie.sum(:downloads_count) %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-yellow-600 to-yellow-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">Categories</h3>
            <p class="text-2xl font-bold text-white"><%= Genre.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-green-600 to-green-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-green-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">TV Shows</h3>
            <p class="text-2xl font-bold text-white"><%= TvShow.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-purple-600 to-purple-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-purple-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">Users</h3>
            <p class="text-2xl font-bold text-white"><%= User.count %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-gradient-to-r from-yellow-600 to-yellow-800 rounded-lg p-6 shadow-lg">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-500 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-white">Categories</h3>
            <p class="text-2xl font-bold text-white"><%= Genre.count %></p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-white mb-4">Quick Actions</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <%= link_to new_admin_movie_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Add Movie</span>
          </div>
        <% end %>
        
        <%= link_to new_admin_tv_show_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Add TV Show</span>
          </div>
        <% end %>


        <%= link_to new_admin_web_series_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>Add Web Series</span>
          </div>
        <% end %>
        
        <%= link_to new_admin_genre_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Add Category</span>
          </div>
        <% end %>
        
        <%= link_to admin_tv_shows_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <span>Manage TV Shows</span>
          </div>
        <% end %>
        
        <%= link_to new_admin_ad_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Add Ad</span>
          </div>
        <% end %>
        
        <%= link_to admin_movies_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h18M3 20h18"></path>
            </svg>
            <span>Manage Movies</span>
          </div>
        <% end %>
        
        <%= link_to admin_web_series_index_path, class: "bg-gray-700 hover:bg-gray-600 text-white p-4 rounded-lg text-center transition-colors" do %>
          <div class="flex flex-col items-center">
            <svg class="w-8 h-8 mb-2 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>Manage Web Series</span>
          </div>
        <% end %>
      </div>
      
      <!-- Toast Demo Buttons -->
      <div class="mt-6 p-4 bg-gray-700 rounded-lg">
        <h3 class="text-white font-medium mb-3">Toast Notification Demos</h3>
        <div class="flex flex-wrap gap-2">
          <button onclick="showSuccess('Movie created successfully!')" class="bg-green-600 hover:bg-green-700 text-white px-3 py-2 rounded text-sm">
            Success Toast
          </button>
          <button onclick="showError('Failed to delete movie. Please try again.')" class="bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded text-sm">
            Error Toast
          </button>
          <button onclick="showWarning('This action cannot be undone.')" class="bg-yellow-600 hover:bg-yellow-700 text-gray-900 px-3 py-2 rounded text-sm">
            Warning Toast
          </button>
          <button onclick="showInfo('New update available. Click to learn more.')" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded text-sm">
            Info Toast
          </button>
          <button onclick="showToast('Custom positioned toast!', 'info', { position: 'bottom-right', duration: 3000 })" class="bg-purple-600 hover:bg-purple-700 text-white px-3 py-2 rounded text-sm">
            Bottom Right
          </button>
        </div>
      </div>
    </div>
    
    <!-- Top Performing Movies -->
    <div class="bg-gray-700 rounded-lg p-6 mb-8">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-bold text-white">Top Performing Movies</h3>
        <%= link_to "View All Movies", admin_movies_path, class: "text-blue-400 hover:text-blue-300 text-sm" %>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% Movie.most_viewed.limit(3).each do |movie| %>
          <div class="bg-gray-600 rounded-lg p-4">
            <div class="flex justify-between items-start mb-2">
              <h4 class="text-white font-medium truncate"><%= movie.title %></h4>
              <span class="text-xs bg-purple-600 text-white px-2 py-1 rounded">
                <%= movie.views_count || 0 %> views
              </span>
            </div>
            <div class="flex justify-between text-sm text-gray-300">
              <span><%= movie.genre&.name || 'N/A' %></span>
              <span><%= movie.downloads_count || 0 %> downloads</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Recent Movies -->
      <div class="bg-gray-700 rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-white">Recent Movies</h3>
          <%= link_to "View All", admin_movies_path, class: "text-blue-400 hover:text-blue-300 text-sm" %>
        </div>
        <div class="space-y-3">
          <% Movie.last(5).reverse_each do |movie| %>
            <div class="flex justify-between items-center p-3 bg-gray-600 rounded">
              <div class="flex items-center">
                <% if movie.thumbnail.attached? %>
                  <%= image_tag movie.thumbnail, class: "w-10 h-10 rounded object-cover", onerror: "this.style.display='none'" %>
                <% else %>
                  <div class="w-10 h-10 bg-gray-500 rounded flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h18M3 20h18"></path>
                    </svg>
                  </div>
                <% end %>
                <span class="ml-3 text-white truncate max-w-xs"><%= movie.title %></span>
              </div>
              <span class="text-gray-400 text-sm"><%= movie.created_at.strftime("%m/%d") %></span>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Recent TV Shows -->
      <div class="bg-gray-700 rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-white">Recent TV Shows</h3>
          <%= link_to "View All", admin_tv_shows_path, class: "text-green-400 hover:text-green-300 text-sm" %>
        </div>
        <div class="space-y-3">
          <% TvShow.last(5).reverse_each do |tv_show| %>
            <div class="flex justify-between items-center p-3 bg-gray-600 rounded">
              <div class="flex items-center">
                <% if tv_show.thumbnail.attached? %>
                  <%= image_tag tv_show.thumbnail, class: "w-10 h-10 rounded object-cover", onerror: "this.style.display='none'" %>
                <% else %>
                  <div class="w-10 h-10 bg-gray-500 rounded flex items-center justify-center">
                    <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                <% end %>
                <span class="ml-3 text-white truncate max-w-xs"><%= tv_show.title %></span>
              </div>
              <span class="text-gray-400 text-sm"><%= tv_show.created_at.strftime("%m/%d") %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Categories and Ads -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Categories -->
      <div class="bg-gray-700 rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-white">Categories</h3>
          <%= link_to "Manage", admin_genres_path, class: "text-yellow-400 hover:text-yellow-300 text-sm" %>
        </div>
        <div class="space-y-3">
          <% Genre.all.each do |genre| %>
            <div class="flex justify-between items-center p-3 bg-gray-600 rounded">
              <span class="text-white"><%= genre.name %></span>
              <span class="text-gray-400 text-sm"><%= genre.movies.count + genre.tv_shows.count %> items</span>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Recent Ads -->
      <div class="bg-gray-700 rounded-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-white">Recent Ads</h3>
          <%= link_to "Manage", admin_ads_path, class: "text-red-400 hover:text-red-300 text-sm" %>
        </div>
        <div class="space-y-3">
          <% Ad.last(5).reverse_each do |ad| %>
            <div class="flex justify-between items-center p-3 bg-gray-600 rounded">
              <span class="text-white truncate max-w-xs"><%= ad.title %></span>
              <div class="flex items-center space-x-2">
                <span class="text-gray-400 text-sm"><%= ad.placement_zone_name&.humanize || 'N/A' %></span>
                <% if ad.active? %>
                  <span class="bg-green-600 text-white px-2 py-1 rounded text-xs">Active</span>
                <% else %>
                  <span class="bg-gray-600 text-white px-2 py-1 rounded text-xs">Inactive</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>