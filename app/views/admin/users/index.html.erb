<div class="bg-gray-800 rounded-lg p-6 max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-white">Manage Users</h1>
  </div>
  
  <div class="overflow-x-auto">
    <table class="min-w-full bg-gray-700 rounded-lg overflow-hidden">
      <thead class="bg-gray-600">
        <tr>
          <th class="py-3 px-4 text-left text-white font-semibold">Email</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Role</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Created At</th>
          <th class="py-3 px-4 text-left text-white font-semibold">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="border-b border-gray-600 hover:bg-gray-650">
            <td class="py-3 px-4 text-white"><%= user.email %></td>
            <td class="py-3 px-4">
              <% if user.admin? %>
                <span class="bg-red-600 text-white px-2 py-1 rounded text-xs">Admin</span>
              <% else %>
                <span class="bg-gray-600 text-white px-2 py-1 rounded text-xs">User</span>
              <% end %>
            </td>
            <td class="py-3 px-4 text-gray-300"><%= user.created_at.strftime("%B %d, %Y") %></td>
            <td class="py-3 px-4">
              <%= link_to "View", admin_user_path(user), class: "text-blue-400 hover:text-blue-300 mr-3" %>
              <%= link_to "Edit", edit_admin_user_path(user), class: "text-yellow-400 hover:text-yellow-300 mr-3" %>
              <%= link_to "Delete", admin_user_path(user), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                  class: "text-red-400 hover:text-red-300" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @users.respond_to?(:current_page) %>
    <div class="mt-6 flex justify-center">
      <%= paginate @users %>
    </div>
  <% end %>
  
  <% if @users.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-400">No users found.</p>
    </div>
  <% end %>
</div>