<div class="min-h-screen bg-gray-900 text-white">
  <!-- Admin Header -->
  <header class="bg-gray-800 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-red-500">ðŸŽ¬ MovieStream Admin</h1>
        </div>
        <nav class="flex space-x-8">
          <%= link_to "Dashboard", admin_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-700' if current_page?(admin_path)}" %>
          <%= link_to "Movies", admin_movies_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-700' if controller_name == 'movies' && action_name == 'index'}" %>
          <%= link_to "Rails Admin", rails_admin_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Back to Site", root_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
        </nav>
        <div class="flex items-center space-x-4">
          <span class="text-sm">Welcome, <%= current_user.full_name %></span>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-red-500 hover:text-red-400 text-sm" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h2 class="text-3xl font-bold mb-2">Admin Dashboard</h2>
      <p class="text-gray-400">Manage your movie streaming platform</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-800 rounded-lg p-6 shadow">
        <div class="flex items-center">
          <div class="rounded-full bg-blue-500 p-3 mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10a2 2 0 012 2v14a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2z"></path>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-400">Total Movies</p>
            <p class="text-2xl font-bold"><%= Movie.count %></p>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 rounded-lg p-6 shadow">
        <div class="flex items-center">
          <div class="rounded-full bg-green-500 p-3 mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10a2 2 0 012 2v14a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2z"></path>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-400">Total TV Shows</p>
            <p class="text-2xl font-bold"><%= TvShow.count %></p>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 rounded-lg p-6 shadow">
        <div class="flex items-center">
          <div class="rounded-full bg-yellow-500 p-3 mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-400">Total Users</p>
            <p class="text-2xl font-bold"><%= User.count %></p>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 rounded-lg p-6 shadow">
        <div class="flex items-center">
          <div class="rounded-full bg-purple-500 p-3 mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-400">Total Genres</p>
            <p class="text-2xl font-bold"><%= Genre.count %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="bg-gray-800 rounded-lg p-6 shadow">
        <h3 class="text-xl font-bold mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <%= link_to "Add New Movie", new_admin_movie_path, class: "block w-full text-center bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out" %>
          <%= link_to "Manage Genres", genres_path, class: "block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out" %>
          <%= link_to "View All Users", "#", class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out" %>
          <%= link_to "Advanced Admin", rails_admin_path, class: "block w-full text-center bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-4 rounded-md transition duration-150 ease-in-out" %>
        </div>
      </div>

      <div class="bg-gray-800 rounded-lg p-6 shadow">
        <h3 class="text-xl font-bold mb-4">Recent Activity</h3>
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="bg-red-500 rounded-full p-2 mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
            <div>
              <p class="font-medium">New movie added</p>
              <p class="text-sm text-gray-400">2 hours ago</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="bg-blue-500 rounded-full p-2 mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <p class="font-medium">New user registered</p>
              <p class="text-sm text-gray-400">5 hours ago</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="bg-green-500 rounded-full p-2 mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <p class="font-medium">Content updated</p>
              <p class="text-sm text-gray-400">1 day ago</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>