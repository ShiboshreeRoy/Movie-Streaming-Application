<div class="bg-gray-800 rounded-lg p-6 max-w-6xl mx-auto">
  <h1 class="text-3xl font-bold text-white mb-8">Admin Dashboard</h1>
  
  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-gray-700 p-6 rounded-lg shadow">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-red-600/20 mr-4">
          <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"></path>
          </svg>
        </div>
        <div>
          <p class="text-gray-400">Movies</p>
          <p class="text-2xl font-bold text-white"><%= @movies_count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-gray-700 p-6 rounded-lg shadow">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-600/20 mr-4">
          <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div>
          <p class="text-gray-400">TV Shows</p>
          <p class="text-2xl font-bold text-white"><%= @tv_shows_count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-gray-700 p-6 rounded-lg shadow">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-600/20 mr-4">
          <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <div>
          <p class="text-gray-400">Users</p>
          <p class="text-2xl font-bold text-white"><%= @users_count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-gray-700 p-6 rounded-lg shadow">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-purple-600/20 mr-4">
          <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <div>
          <p class="text-gray-400">Categories</p>
          <p class="text-2xl font-bold text-white"><%= @genres_count %></p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quick Actions -->
  <div class="mb-8">
    <h2 class="text-xl font-bold text-white mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <%= link_to "Manage Movies", admin_movies_path, class: "bg-gray-700 hover:bg-gray-600 p-4 rounded-lg text-center transition-colors" %>
      <%= link_to "Manage TV Shows", admin_tv_shows_path, class: "bg-gray-700 hover:bg-gray-600 p-4 rounded-lg text-center transition-colors" %>
      <%= link_to "Manage Categories", admin_genres_path, class: "bg-gray-700 hover:bg-gray-600 p-4 rounded-lg text-center transition-colors" %>
      <%= link_to "Manage Ads", admin_ads_path, class: "bg-gray-700 hover:bg-gray-600 p-4 rounded-lg text-center transition-colors" %>
    </div>
  </div>
  
  <!-- Recent Activity -->
  <div>
    <h2 class="text-xl font-bold text-white mb-4">Recent Content</h2>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-gray-700 rounded-lg p-4">
        <h3 class="font-semibold text-white mb-3">Recent Movies</h3>
        <% Movie.order(created_at: :desc).limit(5).each do |movie| %>
          <div class="flex justify-between items-center py-2 border-b border-gray-600">
            <span class="text-gray-300"><%= movie.title %></span>
            <span class="text-gray-500 text-sm"><%= movie.created_at.strftime("%m/%d") %></span>
          </div>
        <% end %>
      </div>
      
      <div class="bg-gray-700 rounded-lg p-4">
        <h3 class="font-semibold text-white mb-3">Recent TV Shows</h3>
        <% TvShow.order(created_at: :desc).limit(5).each do |tv_show| %>
          <div class="flex justify-between items-center py-2 border-b border-gray-600">
            <span class="text-gray-300"><%= tv_show.title %></span>
            <span class="text-gray-500 text-sm"><%= tv_show.created_at.strftime("%m/%d") %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>