<!-- Hero Section with Gradient Overlay -->
<div class="relative rounded-xl overflow-hidden mb-8">
  <% if @movie.display_poster_url %>
    <div class="relative h-96 md:h-[500px]">
      <%= image_tag @movie.display_poster_url, class: "w-full h-full object-cover", alt: @movie.title %>
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-transparent"></div>
      
      <!-- Play Button Overlay -->
      <div class="absolute inset-0 flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity duration-300">
        <%= link_to movie_path(@movie, watch: true), class: "group flex items-center justify-center w-24 h-24 rounded-full bg-red-600/80 hover:bg-red-700/90 backdrop-blur-sm transition-all duration-300 transform hover:scale-110 hover:shadow-2xl" do %>
          <svg class="w-12 h-12 text-white group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
          </svg>
        <% end %>
      </div>
      
      <!-- Movie Info Overlay -->
      <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-3xl md:text-5xl font-bold text-white mb-3 drop-shadow-lg"><%= @movie.title %></h1>
          
          <div class="flex flex-wrap items-center gap-4 text-gray-200 mb-4">
            <span class="bg-black/50 px-3 py-1 rounded-full text-sm"><%= @movie.release_year %></span>
            <span class="bg-black/50 px-3 py-1 rounded-full text-sm"><%= @movie.duration %> min</span>
            
            <% if @movie.imdb_rating %>
              <div class="flex items-center bg-yellow-500/90 px-3 py-1 rounded-full">
                <span class="text-yellow-900 font-bold">‚òÖ</span>
                <span class="ml-1 text-yellow-900 font-semibold"><%= @movie.imdb_rating %></span>
              </div>
            <% end %>
            
            <% if @average_rating && @average_rating != 'N/A' %>
              <div class="flex items-center bg-blue-500/90 px-3 py-1 rounded-full">
                <span class="text-blue-900 font-bold">‚≠ê</span>
                <span class="ml-1 text-blue-900 font-semibold"><%= @average_rating %>/10</span>
              </div>
            <% end %>
            
            <% if @movie.genre %>
              <span class="bg-red-600 px-3 py-1 rounded-full text-sm"><%= @movie.genre.name %></span>
            <% end %>
            
            <span class="bg-gray-700 px-3 py-1 rounded-full text-sm"><%= @movie.country %></span>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 h-96 md:h-[500px] flex items-center justify-center rounded-xl">
      <div class="text-center">
        <div class="text-6xl mb-4">üé¨</div>
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-2"><%= @movie.title %></h1>
        <p class="text-gray-400">No poster available</p>
      </div>
    </div>
  <% end %>
</div>

<!-- Main Content Section -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
  
  <!-- Left Column - Main Info -->
  <div class="lg:col-span-2">
    
    <!-- Overview Section -->
    <div class="bg-gray-800 rounded-xl p-6 mb-8 shadow-lg">
      <h2 class="text-2xl font-bold text-white mb-4 pb-2 border-b border-gray-700">Storyline</h2>
      <p class="text-gray-300 leading-relaxed text-lg">
        <%= @movie.description.presence || "No description available for this movie." %>
      </p>
    </div>
    
    <!-- Cast & Crew Section -->
    <div class="bg-gray-800 rounded-xl p-6 mb-8 shadow-lg">
      <h2 class="text-2xl font-bold text-white mb-4 pb-2 border-b border-gray-700">Cast & Crew</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-white mb-2">Director</h3>
          <p class="text-gray-300"><%= @movie.director.presence || "Information not available" %></p>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold text-white mb-2">Main Cast</h3>
          <p class="text-gray-300"><%= @movie.cast.presence || "Cast information not available" %></p>
        </div>
      </div>
    </div>
    
    <!-- User Actions Section -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h2 class="text-2xl font-bold text-white mb-4 pb-2 border-b border-gray-700">Your Actions</h2>
      
      <div class="flex flex-wrap gap-4">
        <% if user_signed_in? %>
          <!-- Rating System -->
          <div class="flex-1 min-w-[250px]">
            <h3 class="text-lg font-semibold text-white mb-3">Rate this Movie</h3>
            <%= form_with url: user_movie_ratings_path, method: :post, local: true, class: "flex items-center gap-3" do |form| %>
              <%= form.hidden_field :movie_id, value: @movie.id %>
              <div class="flex items-center bg-gray-700 rounded-lg px-3 py-2">
                <span class="text-yellow-400 mr-2">‚òÖ</span>
                <%= form.number_field :rating, 
                    min: 1, 
                    max: 10, 
                    step: 1, 
                    value: @user_rating || '', 
                    placeholder: "1-10", 
                    class: "w-20 bg-transparent text-white border-none focus:outline-none text-center" %>
              </div>
              <%= form.submit "Submit Rating", class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors" %>
            <% end %>
            
            <% if @user_rating %>
              <p class="text-sm text-gray-400 mt-2">Your rating: <span class="text-yellow-400 font-semibold"><%= @user_rating %>/10</span></p>
            <% end %>
          </div>
          
          <!-- Favorite Button -->
          <div class="flex items-end">
            <% user_favorite = current_user.user_favorites.find_by(movie: @movie) %>
            <% if user_favorite %>
              <%= link_to user_favorite_path(user_favorite), 
                  data: { turbo_method: :delete },
                  class: "flex items-center gap-2 bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white px-6 py-3 rounded-lg font-semibold transition-all transform hover:scale-105" do %>
                <span class="text-xl">‚òÖ</span>
                Remove from Favorites
              <% end %>
            <% else %>
              <%= link_to user_favorites_path, 
                  method: :post, 
                  params: { movie_id: @movie.id },
                  class: "flex items-center gap-2 bg-gray-700 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold transition-all" do %>
                <span class="text-xl">‚òÜ</span>
                Add to Favorites
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="w-full">
            <p class="text-gray-400 text-center py-4">
              <%= link_to "Sign in", new_user_session_path, class: "text-red-400 hover:text-red-300 font-semibold" %> to rate and favorite this movie
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Right Column - Media & Info -->
  <div class="space-y-6">
    
    <!-- Watch Options -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h3 class="text-xl font-bold text-white mb-4">Watch Options</h3>
      
      <div class="space-y-3">
        <!-- Trailer Button -->
        <% if @movie.trailer_url %>
          <%= link_to @movie.trailer_url, 
              target: "_blank",
              class: "flex items-center justify-between w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-4 py-3 rounded-lg transition-all group" do %>
            <div class="flex items-center gap-3">
              <span class="text-2xl group-hover:scale-110 transition-transform">‚ñ∂</span>
              <span>Watch Trailer</span>
            </div>
            <span class="text-sm opacity-80">‚Üó</span>
          <% end %>
        <% end %>
        
        <!-- Stream Button -->
        <% if @movie.display_video_url %>
          <%= link_to movie_path(@movie, watch: true), 
              class: "flex items-center justify-between w-full bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white px-4 py-3 rounded-lg transition-all group" do %>
            <div class="flex items-center gap-3">
              <span class="text-2xl group-hover:scale-110 transition-transform">üé¨</span>
              <span>Stream Now</span>
            </div>
            <span class="text-sm opacity-80">HD</span>
          <% end %>
        <% end %>
        
        <!-- Download Button (if enabled) -->
        <% if @movie.enable_download %>
          <%= link_to download_movie_path(@movie), 
              class: "w-full bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white px-4 py-3 rounded-lg transition-all flex items-center justify-between" do %>
            <div class="flex items-center gap-3">
              <span class="text-xl">‚¨á</span>
              <span>Download Movie</span>
            </div>
            <div class="text-right">
              <div class="text-sm"><%= @movie.download_quality&.upcase || "HD" %></div>
              <% if @movie.download_price && @movie.download_price > 0 %>
                <div class="text-xs opacity-80">$<%= @movie.download_price %></div>
              <% else %>
                <div class="text-xs opacity-80">FREE</div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- Movie Stats -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h3 class="text-xl font-bold text-white mb-4">Movie Details</h3>
      
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-400">Release Year</span>
          <span class="text-white font-semibold"><%= @movie.release_year %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Duration</span>
          <span class="text-white font-semibold"><%= @movie.duration %> minutes</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Genre</span>
          <span class="text-white font-semibold"><%= @movie.genre&.name || "Not specified" %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-400">Country</span>
          <span class="text-white font-semibold"><%= @movie.country || "Not specified" %></span>
        </div>
        
        <% if @movie.imdb_rating %>
          <div class="flex justify-between">
            <span class="text-gray-400">IMDb Rating</span>
            <div class="flex items-center">
              <span class="text-yellow-400 mr-1">‚òÖ</span>
              <span class="text-white font-semibold"><%= @movie.imdb_rating %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Share Section -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <h3 class="text-xl font-bold text-white mb-4">Share This Movie</h3>
      
      <div class="flex gap-3">
        <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg transition-colors">
          Facebook
        </button>
        <button class="flex-1 bg-sky-500 hover:bg-sky-600 text-white py-2 rounded-lg transition-colors">
          Twitter
        </button>
        <button class="flex-1 bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg transition-colors">
          WhatsApp
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Related Movies Section -->
<% if @related_movies.any? %>
  <section class="mb-12">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold text-white">You Might Also Like</h2>
      <%= link_to movies_path(genre_id: @movie.genre_id), class: "text-red-400 hover:text-red-300 flex items-center gap-1" do %>
        View All <span>‚Üí</span>
      <% end %>
    </div>
    
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
      <% @related_movies.each do |movie| %>
        <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg transform transition-all hover:scale-105 hover:shadow-2xl group">
          <%= link_to movie_path(movie) do %>
            <div class="relative">
              <% if movie.display_poster_url %>
                <%= image_tag movie.display_poster_url, class: "w-full h-64 object-cover group-hover:brightness-110 transition-all", alt: movie.title %>
              <% else %>
                <div class="bg-gray-700 w-full h-64 flex items-center justify-center">
                  <span class="text-gray-400">No Image</span>
                </div>
              <% end %>
              
              <!-- Hover overlay -->
              <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <span class="text-white text-lg font-semibold">View Details</span>
              </div>
            </div>
            
            <div class="p-4">
              <h3 class="font-semibold text-white truncate mb-2"><%= movie.title %></h3>
              <div class="flex justify-between items-center text-sm">
                <span class="text-gray-400"><%= movie.release_year %></span>
                <div class="flex items-center text-yellow-400">
                  <span class="mr-1">‚òÖ</span>
                  <span class="text-gray-300"><%= movie.imdb_rating || 'N/A' %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
