<% if params[:watch] == 'true' %>
  <!-- Video Player View -->
  <div class="min-h-screen bg-black">
    <div class="container mx-auto px-4 py-8">
      <!-- Video Player -->
      <div class="relative bg-black rounded-lg overflow-hidden shadow-2xl" style="padding-top: 56.25%;"> <!-- 16:9 Aspect Ratio -->
        <% if @tv_show.display_video_url %>
          <video 
            id="tv-show-player" 
            class="absolute top-0 left-0 w-full h-full"
            controls 
            preload="metadata"
            poster="<%= @tv_show.display_poster_url || asset_path('placeholder-poster.jpg') %>">
            <source src="<%= @tv_show.display_video_url %>" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        <% else %>
          <div class="absolute top-0 left-0 w-full h-full flex items-center justify-center text-white">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <p class="mt-4 text-gray-400">No video available for this TV show</p>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Video Info -->
      <div class="mt-6 text-white">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
          <div>
            <h1 class="text-3xl font-bold"><%= @tv_show.title %></h1>
            <div class="flex items-center gap-4 mt-2 text-gray-300">
              <span><%= @tv_show.release_year %></span>
              <span>‚Ä¢</span>
              <span><%= @tv_show.seasons_count || 0 %> Seasons</span>
              <span>‚Ä¢</span>
              <span><%= @tv_show.episodes_per_season || 0 %> Episodes</span>
              <span>‚Ä¢</span>
              <span><%= @tv_show.duration || 0 %> min</span>
            </div>
          </div>
          
          <div class="mt-4 md:mt-0">
            <%= link_to tv_show_path(@tv_show), class: "bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors" do %>
              <i class="fas fa-info-circle mr-2"></i> Back to Details
            <% end %>
          </div>
        </div>
        
        <div class="mt-4 flex flex-wrap gap-3">
          <% if @tv_show.enable_download %>
            <%= link_to download_tv_show_path(@tv_show), 
                class: "inline-flex items-center bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
              </svg>
              Download TV Show
            <% end %>
          <% end %>
          
          <%= link_to tv_show_path(@tv_show), class: "inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors ml-3" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            More Info
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <!-- Original Show View -->
  <div class="bg-gray-800 rounded-lg p-6 mb-8">
    <div class="flex flex-col md:flex-row">
      <!-- TV Show Poster -->
      <div class="md:w-1/3 mb-6 md:mb-0 md:pr-6">
        <% if @tv_show.display_poster_url %>
          <%= image_tag @tv_show.display_poster_url, class: "w-full rounded-lg", alt: @tv_show.title %>
        <% else %>
          <div class="bg-gray-700 w-full h-96 flex items-center justify-center rounded-lg">
            <span class="text-gray-400 text-xl">No Image Available</span>
          </div>
        <% end %>
      </div>
      
      <!-- TV Show Details -->
      <div class="md:w-2/3">
        <h1 class="text-4xl font-bold mb-2"><%= @tv_show.title %></h1>
        <div class="flex flex-wrap items-center text-gray-400 mb-4">
          <span><%= @tv_show.release_year %></span>
          <span class="mx-2">‚Ä¢</span>
          <span><%= @tv_show.seasons_count || 0 %> Seasons</span>
          <span class="mx-2">‚Ä¢</span>
          <span><%= @tv_show.episodes_per_season || 0 %> Episodes</span>
          <span class="mx-2">‚Ä¢</span>
          <span class="flex items-center">
            ‚≠ê <span class="ml-1"><%= @tv_show.imdb_rating || 'N/A' %></span>
          </span>
        </div>
        
        <div class="mb-4">
          <% if @tv_show.genre %>
            <span class="bg-red-600 text-white px-3 py-1 rounded-full text-sm mr-2"><%= @tv_show.genre.name %></span>
          <% end %>
          <span class="bg-gray-700 text-white px-3 py-1 rounded-full text-sm"><%= @tv_show.country %></span>
        </div>
        
        <div class="mb-6">
          <h3 class="text-xl font-semibold mb-2">Overview</h3>
          <p class="text-gray-300"><%= @tv_show.description %></p>
        </div>
        
        <div class="flex flex-wrap gap-4">
          <!-- Trailer Link -->
          <% if @tv_show.trailer_url %>
            <%= link_to "‚ñ∂ Watch Trailer", @tv_show.trailer_url, target: "_blank", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
          <% end %>
          
          <!-- Stream Button -->
          <% if @tv_show.display_video_url %>
            <%= link_to tv_show_path(@tv_show, watch: true), 
                class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded flex items-center gap-2" do %>
              <span>üé¨</span>
              <span>Stream Now</span>
            <% end %>
          <% end %>
          
          <!-- Download Button (if enabled) -->
          <% if @tv_show.enable_download %>
            <%= link_to download_tv_show_path(@tv_show), 
                class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded flex items-center gap-2" do %>
              <span>‚¨á</span>
              <span>Download</span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Related TV Shows -->
  <% if @related_tv_shows.any? %>
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 text-white">Related TV Shows</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
        <% @related_tv_shows.each do |tv_show| %>
          <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg transform transition-transform hover:scale-105">
            <%= link_to tv_show_path(tv_show) do %>
              <% if tv_show.display_poster_url %>
                <%= image_tag tv_show.display_poster_url, class: "w-full h-48 object-cover", alt: tv_show.title %>
              <% else %>
                <div class="bg-gray-700 w-full h-48 flex items-center justify-center">
                  <span class="text-gray-400">No Image</span>
                </div>
              <% end %>
              <div class="p-3">
                <h3 class="font-semibold truncate"><%= tv_show.title %></h3>
                <div class="flex justify-between text-sm text-gray-400">
                  <span><%= tv_show.release_year %></span>
                  <span>‚≠ê <%= tv_show.imdb_rating || 'N/A' %></span>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
<% end %>
