<div class="bg-gray-800 rounded-lg p-6 max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Edit Profile</h1>
  
  <%= form_with model: @user, local: true, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h3 class="font-bold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
        <ul class="list-disc pl-5 mt-2">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :first_name, class: "block text-sm font-medium mb-2" %>
        <%= form.text_field :first_name, class: "w-full bg-gray-700 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
      </div>
      
      <div>
        <%= form.label :last_name, class: "block text-sm font-medium mb-2" %>
        <%= form.text_field :last_name, class: "w-full bg-gray-700 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
      </div>
      
      <div>
        <%= form.label :email, class: "block text-sm font-medium mb-2" %>
        <%= form.email_field :email, class: "w-full bg-gray-700 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
      </div>
      
      <div>
        <%= form.label :password, class: "block text-sm font-medium mb-2" %>
        <%= form.password_field :password, class: "w-full bg-gray-700 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500", placeholder: "Leave blank to keep current password" %>
      </div>
      
      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium mb-2" %>
        <%= form.password_field :password_confirmation, class: "w-full bg-gray-700 text-white rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" %>
      </div>
    </div>
    
    <div class="flex justify-end space-x-4 pt-4">
      <%= link_to "Cancel", user_path(@user), class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded" %>
      <%= form.submit "Update Profile", class: "bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded" %>
    </div>
  <% end %>
</div>